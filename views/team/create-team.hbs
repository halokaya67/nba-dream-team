<div
  class="container d-flex flex-column justify-content-center text-center py-4"
  id="create-team-container"
>
  <h1 class="mb-4">Create Your Team</h1>
  <form class="d-flex flex-column" action="/profile/create-team" method="POST">
    <div class="d-flex flex-column mb-3 align-items-center">
      <label class="form-label fs-5">
        Team Name
      </label>
      <input
        placeholder="Write Your Team Name"
        name="name"
        type="text"
        class="form-control w-75"
      />
    </div>
    <div>
      <button
        type="submit"
        class="btn btn-primary fw-bold px-5 mt-4"
      >Submit</button>
    </div>
  </form>
  <div class="mt-3">
    {{#if error}}
      <p class="error btn btn-danger fw-bold py-1 px-3 text-uppercase">
        {{error}}
      </p>
    {{/if}}
  </div>
</div>