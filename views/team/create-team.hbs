<div class="container d-flex align-items-center justify-content-center">
    <div class="container d-flex flex-column justify-content-center text-center" id="create-team-container">
        <h1 class="mb-4">Create Your Team</h1> 
        <form class="d-flex flex-column" action="/profile/create-team" method="POST">
            <div class="mb-3">
                <label class="form-label fs-5">
                    Team Name
                </label>
                <input placeholder="Write Your Team Name" name="name" type="text" class="form-control"/>
            </div>
            <div class="justify-content-center">
                <button type="submit" class="btn btn-primary fw-bold px-5">Submit</button>
            </div>
        </form>
        <div class="mt-3">
            {{#if error}}
                <p class="error btn btn-danger fw-bold py-1 px-3 text-uppercase">
                    {{error}}
                </p>
            {{/if}}
        </div>
    </div>
</div>