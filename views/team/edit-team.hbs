<div
  class="container d-flex flex-column justify-content-center text-center p-5"
  id="edit-team-container"
>
  <h1 class="mb-3">Edit Your Team</h1>
  <form
    method="POST"
    action="/upload/{{team._id}}/team-logo"
    enctype="multipart/form-data"
  >
    <label class="form-label fs-5">
      Team Logo
    </label>
    <div class="d-flex align-items-center justify-content-center">
      <input
        class="btn btn-outline w-75"
        type="file"
        name="imageUrl"
        accept="image/png, image/jpg"
      />
      <button type="submit" class="btn btn-primary fw-bold px-3">Submit</button>
    </div>
  </form>
  <form
    class="d-flex flex-column mt-3"
    action="/profile/{{team._id}}/edit-team"
    method="POST"
  >
    <div class="d-flex flex-column align-items-center mb-3">
      <label class="form-label fs-5">
        Team Name
      </label>
      <input
        placeholder="Write Your Team Name"
        value="{{team.name}}"
        name="name"
        type="text"
        class="form-control w-75"
      />
    </div>
    <div class="justify-content-center mt-4">
      <button type="submit" class="btn btn-primary fw-bold px-5">Submit</button>
    </div>
  </form>
  <div class="mt-3">
    {{#if error}}
      <p class="error btn btn-danger fw-bold py-1 px-3 text-uppercase">
        {{error}}
      </p>
    {{/if}}
  </div>
</div>