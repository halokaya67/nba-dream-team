<div class="container">
  <div class="container d-flex flex-column justify-content-center text-center" id="login-container">
    <h1 class="mb-3">Create a new Account</h1>
    <form class="d-flex flex-column" action="/logIn" method="POST">
      <div class="mb-3">
        <label class="form-label fs-5">
          Username
        </label>
        <input placeholder="Write Your Username" name="username" type="text" class="form-control"/>
      </div>
      <div class="mb-3">
        <label class="form-label fs-5">
          Password
        </label>
        <input placeholder="Write Your Password" name="password" type="password" class="form-control">
      </div>
      <p class="my-2">You already have an account? <a href="/signUp">Sign Up!</a></p>
      <div class="justify-content-center mt-5">
        <button type="submit" class="btn btn-primary fw-bold w-75">Submit</button>
      </div>
    </form>
    <div class="mt-3">
      {{#if error}}
        <p class="error">
          {{error}}
        </p>
      {{/if}}
    </div>
  </div>
</div>