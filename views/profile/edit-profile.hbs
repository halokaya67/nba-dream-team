<div class="container d-flex flex-column text-center px-4 py-3" id="edit-profile-container">
    <h1 class="mb-2">Edit Your Profile</h1>
    <form method="POST" action="/upload" enctype="multipart/form-data">
        <label class="form-label fs-5">
                Profile Picture
        </label>
        <div class="d-flex align-items-center d-flex flex-row justify-content-center">
            <input class="btn btn-outline w-75" type="file" name="imageUrl" accept="image/png, image/jpg">
            <button type="submit" class="btn btn-primary fw-bold px-3">Submit</button>
        </div>
    </form>  
    <form class="d-flex flex-column" action="/profile/edit" method="POST">
        <div class="mb-1">
            <label class="form-label fs-5">
                Username
            </label>
            <input placeholder="Write Your New Username" name="username" type="text" class="form-control" value="{{user.username}}"/>
        </div>
        <div class="mb-1">
            <label class="form-label fs-5">
                Email address
            </label>
            <input placeholder="Write Your New Email Address" name="email" type="email" class="form-control" aria-describedby="emailHelp" value="{{user.email}}">
        </div>
        <div class="mb-1">
            <label class="form-label fs-5">
                Password
            </label>
            <input placeholder="Write Your New Password" name="password" type="password" class="form-control">
        </div>
        <div class="d-flex justify-content-evenly">
            <div class="mb-1 w-25">
                <label class="form-label fs-5">
                    Age
                </label>
                <input placeholder="Age" name="age" type="number" class="form-control" value="{{user.age}}">
            </div>
            <div class="mb-1 w-50">
                <label class="form-label fs-5">
                    Country
                </label>
                <input placeholder="Select Your Country" name="country" type="dropdown" class="form-control" value="{{user.country}}">
            </div>
        </div>
        <div class="mb-1">
            <label class="form-label fs-5">
                Favorite Team
            </label>
            <input placeholder="Select Your Favourite NBA Team" name="favTeam" type="textarea" class="form-control" value="{{user.favTeam}}">
        </div>
        <div class="mb-1">
            <label class="form-label fs-5">
                About Me
            </label>
            <textarea placeholder="Tell Us About Yourself" class="form-control" id="exampleFormControlTextarea1" name="aboutMe" rows="3">{{user.aboutMe}}</textarea>
        </div>
        <div class="d-flex flex-row justify-content-around mt-3">
            <div class="justify-content-center">
                <button type="submit" class="btn btn-primary fw-bold px-5">Submit</button>
            </div>
        </div>
    </form>
    <div class="d-flex justify-content-center mt-2">
        <form action="/profile/delete" method="POST">
            <button class="btn btn-danger fw-bold px-4" type="submit">Delete Profile</button>
        </form>
    </div>
    <div class="mt-2">
        {{#if error}}
            <p class="error btn btn-danger fw-bold px-3 text-uppercase">
                {{error}}!
            </p>
        {{/if}}
    </div>
</div>