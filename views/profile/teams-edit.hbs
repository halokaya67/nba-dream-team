<div class="d-flex justify-content-center align-items-center" id="myTeam-container">
    <div class="d-flex flex-column align-items-center text-light">
        <div class="">
            <h1 class="text-center m-3">My Favourite Players</h1>
            <ul class="p-0">
                {{#if favPlayersArr.length}}
                    {{#each favPlayersArr}}
                        <li class="d-flex flex-row my-2 player-card myFavPlayers">
                            <img src="" alt="">
                            <div>
                                <h5 class="fw-bold text-decoration-underline">{{this.first_name}} {{this.last_name}}</h4>
                                <p>
                                    <b>Height: </b>{{this.height_feet}}' {{this.height_inches}}"
                                    <b>Weight: </b>{{this.weight_pounds}}
                                    <b>Team: </b>{{this.team.full_name}}
                                    <b>Pos: </b>{{this.position}}
                                </p>
                            </div>
                        </li>
                    {{/each}}
                {{else}}
                    <li class="d-flex flex-row my-2 player-card myFavPlayers">
                        <a class="p-3" href="#">
                            <button class="btn">
                                <img src="/images/add.png" alt="add-button" />
                            </button>
                        </a>
                    </li>
                {{/if}}
            </ul>
        </div>
        <div class="">
            <h1 class="text-center m-3">My Teams</h1>
            <ul class="p-0">
                {{#if myTeamPlayersArr.length}}
                    {{#each myTeamPlayersArr}}
                        <li class="d-flex flex-row my-2 player-card">
                            <img src="" alt="">
                            <div>
                                <h5 class="fw-bold text-decoration-underline">{{this.first_name}} {{this.last_name}}</h4>
                                <p>
                                    <b>Height: </b>{{this.height_feet}}' {{this.height_inches}}"
                                    <b>Weight: </b>{{this.weight_pounds}}
                                    <b>Team: </b>{{this.team.full_name}}
                                    <b>Pos: </b>{{this.position}}
                                </p>
                            </div>
                        </li>
                    {{/each}}
                {{else}}
                    <li class="d-flex flex-row my-2 player-card myFavPlayers">
                        <a class="p-3" href="#">
                            <button class="btn">
                                <img src="/images/add.png" alt="add-button" />
                            </button>
                        </a>
                    </li>
                {{/if}}
            </ul>
        </div>
        <div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalLabel">Modal title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
        <a href="#" class="button">
            <button class="btn btn-primary fw-bold px-5 py-2 mb-4 text-nowrap" data-bs-toggle="modal" data-bs-target="#modal">
                Edit My Team
            </button>
        </a>
    </div>
</div>