<a class="position-absolute p-3" href="/profile/{{team._id}}">
    <img src="/images/back.png" alt="back-button"/>
</a>

<div class="d-flex flex-column justify-content-center align-items-center" id="addPlayer-container">
    <h1 class=""></h1>
    <form class="w-50" action="/profile/{{team._id}}/list-players" method="POST">
        <div class="input-group input-group-lg mb-4">
            <input name='search' type="text" class="form-control py-3 text-center text-light bg-dark" id="search-form" placeholder="Search the player's name" aria-describedby="button-addon2">
            <button class="btn btn-outline-primary fw-bold text-center" type="submit" id="button-addon2">Search</button>
        </div>
    </form>
    <div id="players-container" class="d-flex flex-column align-items-center text-light overflow-auto my-3">
        <div>
            {{#each playersArr}}
                <form action="/profile/{{../team._id}}/add-team-player" method="POST">
                    <button type="submit" name="player" value="{{this.id}}" class="btn d-flex flex-row justify-content-center my-2 player-card">
                        <img src="" alt="">
                        <div>
                            <h5 class="fw-bold text-decoration-underline">{{this.first_name}} {{this.last_name}}</h4>
                            <p class="text-wrap player-info m-0">
                                <b>Height: </b>{{this.height_feet}}' {{this.height_inches}}"
                                <b>Weight: </b>{{this.weight_pounds}}
                                <b>Team: </b>{{this.team.full_name}}
                                <b>Pos: </b>{{this.position}}
                            </p>
                        </div>
                    </button>
                </form>
            {{/each}}
        </div>
    </div>
</div>